<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - REM</title>
    <link rel="icon" href="~/Content/img/logo.ico" type="image/x-icon; charset=binary">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body onload="myLoader.style.display = 'none';">
    <div class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("REM", "GraphicPreview", "Meteos", new { area = "" }, new { @class = "navbar-brand" })
                @*<a href="@Html.Action("Index","Home")" class="navbar-brand">
                        <img src="~/Content/img/logotxt.png" width="300" height="76"/>
                    </a>*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li> <a href="~/Dashboard/index.html" target="_blank"> Dashboard </a></li>
                    <li>@Html.ActionLink("Valeurs mesurees", "Index", "Meteos")</li>
                    <li>@Html.ActionLink("Aperçu Graphique", "GraphicPreview", "Meteos")</li>
                    <li>@Html.ActionLink("informations", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-right">
            <p>&copy; @DateTime.Now.Year - REM</p>
        </footer>
    </div>

    @Html.Partial("_LoadingPage")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
